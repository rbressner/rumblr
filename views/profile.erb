
<div class="profile-info">
<% if session[:user_id] %>
<img src="./avatar.png" class="propic">
<h1><%= @name %></h1>

<p class="new-post-label">New Post:</p>
<a href="/new-post" class="new-post-btn"><img src="./add1.png"></a>
</div>
<br>


<h1 class="wall"><%= @name %>'s wall of theories</h1>
<ul class="posts">
  <% @posts.each do |post| %>
  <div class="post-tile">
  <li class="post-title"><%=post.title%></li>
  <li class="post-content"><%=post.content%></li>
  <button type="button" class="like-btn"><img src="like.png"></button>
</div>
  <% end %>
</ul>


<% else %>

<h1>You must be signed in to view this page!</h1>
<a href="/">Home</a>

<% end %>
